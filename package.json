{
  "name": "konoha-whatsapp-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot with authentication, session management, and group commands",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "start:prod": "node start-production.js",
    "start:enhanced": "node start-enhanced.js",
    "start:linux": "./start-linux.sh start",
    "stop:linux": "./start-linux.sh stop",
    "restart:linux": "./start-linux.sh restart",
    "status:linux": "./start-linux.sh status",
    "pm2": "./pm2.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop konoha-bot",
    "pm2:restart": "pm2 restart konoha-bot",
    "pm2:reload": "pm2 reload konoha-bot",
    "pm2:delete": "pm2 delete konoha-bot",
    "pm2:logs": "pm2 logs konoha-bot",
    "pm2:status": "pm2 show konoha-bot",
    "pm2:monitor": "pm2 monit",
    "dev": "node --watch src/bot.js",
    "status": "node check-status.js",
    "check": "node check-status.js"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "authentication",
    "session",
    "tagall",
    "ping"
  ],
  "author": "Konoha-Bot Developer",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "googleapis": "^164.0.0",
    "moment": "^2.29.4",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
